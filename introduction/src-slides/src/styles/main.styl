@import 'prism/themes/prism-okaidia.css'

body
	background: rgb(34, 49, 63)
	
body *
	color: white
	font-family: 'Lato', sans-serif;
	
li, p
	font-size: 1.2em
	line-height: 1.2em
	
.black 
	background: white
	

.black *
	color: rgb(34, 49, 63) 
	


.bespoke-slide
	background: transparent
	background-size: cover !important
	z-index: 10
	left: 20%
	right: 20%
	width: auto
	height: auto
	padding: 0
	top: 0
	bottom: 0
	margin: 0

.fullscreen
	left: 0
	right: 0
	top: 0
	left: 0
	


.animated-background *
	color: white
	
.animated-background:before
	content: ''
	z-index: -10
	position: absolute
	top: 0
	left: 0
	bottom: 0
	right: 0
	background: rgba(0,0,0, 0.5)

a 
	//color: white
	font-weight: 700
	text-decoration: underline


.author 
	margin-top: 20px

.author *
	vertical-align: middle
	font-style: italic
	font-weight: 100
	text-decoration: none
	text-align: right



.start 
	background-image: url(../images/start.gif)
	
.ugly
	background-image: url(../images/ugly.gif)
	background-size:  100% 100% !important
	background-repeat: no-repeat

.practice
	background-image: url(../images/practice.gif)
	
.success
	background-image: url(../images/success.gif)
	
.programming
	background-image: url(../images/programming.gif)
	

.bespoke-slidenumber 
	position: absolute
	bottom: 50px
	right: 50px
	
